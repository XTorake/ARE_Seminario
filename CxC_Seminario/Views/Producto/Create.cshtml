@model CxC_Seminario.DO.Producto
@using CxC_Seminario.DO
@{
    ViewBag.Title = "Create";
}


@{
    IEnumerable<CategoriaProducto> categoriaProductos = ViewData["CategoriaProducto"] as IEnumerable<CategoriaProducto>;

}

<div class="container-fluid" style="padding-top:5%">
    <div class="single-pro-review-area mt-t-30 mg-b-15">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="sparkline12-list">
                        <div class="sparkline12-hd">
                            <div class="main-sparkline12-hd">
                                <h1>Crear Distrito Eclesiastico</h1>
                            </div>
                        </div>
                        <div class="sparkline12-graph">
                            <div class="basic-login-form-ad">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="all-form-element-inner">

                                            @using (Html.BeginForm())
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                                <div class="form-group-inner">
                                                    <div class="row">
                                                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                                            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "login2 pull-right pull-right-pro" })
                                                        </div>
                                                        <div class="ol-lg-9 col-md-9 col-sm-9 col-xs-12">
                                                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group-inner">
                                                    <div class="row">
                                                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                                            @Html.LabelFor(model => model.IdCategoriaProducto, htmlAttributes: new { @class = "login2 pull-right pull-right-pro" })
                                                        </div>
                                                        <div class="ol-lg-9 col-md-9 col-sm-9 col-xs-12">
                                                            @Html.DropDownList("idCategoriaProducto", new SelectList(categoriaProductos, "idCategoriaProducto", "Nombre"), "Seleciona una Categoria", htmlAttributes: new { @class = "form-control" })

                                                            @Html.ValidationMessageFor(model => model.IdCategoriaProducto, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group-inner">
                                                    <div class="row">
                                                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                                            @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "login2 pull-right pull-right-pro" })
                                                        </div>
                                                        <div class="ol-lg-9 col-md-9 col-sm-9 col-xs-12">
                                                            @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group-inner">
                                                    <div class="login-btn-inner">
                                                        <div class="row">
                                                            <div class="col-lg-3"></div>
                                                            <div class="col-lg-9">
                                                                <div class="login-horizental cancel-wp pull-left form-bc-ele">
                                                                    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-custon-rounded-three btn-danger" })
                                                                    <input type="submit" value="Crear" class="btn btn-sm btn-primary login-submit-cs" />

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
