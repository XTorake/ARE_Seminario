@model IEnumerable<CxC_Seminario.DO.Telefono>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    <div class="container-fluid">
        <a href="@Url.Action("Create", "Telefono")" class="btn btn-primary btn-lg"> Agregar Nuevo</a>
    </div>
</p>
<div class="sparkline8-list">
    <div class="sparkline8-graph">
        <div class="static-table-list">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefono1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Pais.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Persona.Nombre)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pais.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Persona.Nombre)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.IdTelefono }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdTelefono })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>