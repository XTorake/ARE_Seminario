@model IEnumerable<CxC_Seminario.DO.Curso>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<div class="product-status mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap drp-lst">
                    <h4>Lista de Cursos</h4>
                    <div class="add-product">
                        <a href="@Url.Action("Create", "Curso")" class="btn btn-primary btn-lg"> Agregar Nuevo</a>
                    </div>
                    <div class="asset-inner">
                        <table>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    Cedula de Profesor
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Precio)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Creditos)
                                </th>
                                <th>
                                    Opciones
                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                               
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdProfesor)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Precio)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Creditos)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.IdCurso }, new { @class = "btn btn-warning btn-sm" })  |
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdCurso }, new { @class = "btn btn-danger btn-sm" })
                                    </td>
                                </tr>
                                                        
                            }


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
