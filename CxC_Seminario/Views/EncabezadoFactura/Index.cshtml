@model IEnumerable<CxC_Seminario.DO.EncabezadoFactura>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="product-status mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap drp-lst">
                    <h4>Lista de Facturas</h4>
                    <div class="add-product">
                        <a href="@Url.Action("Create", "EncabezadoFactura")" class="btn btn-primary btn-lg"> Agregar Nuevo</a>

                    </div>
                    <div class="asset-inner">
                        <table>
                            <tr>
                                <th>
                                    #ID de Factura
                                </th>
                                <th>
                                    Usuario
                                </th>
                                <th>
                                    Direccion
                                </th>
                                <th>
                                    Total Cobrado
                                </th>
                                <th>
                                    Total Pagado
                                </th>
                                
                                <th>
                                    Fecha de Pago
                                </th>
                                
                            </tr>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdEncabezado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdEstudiante)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Direccion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalCobrar)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalPagar)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaPago)
                                    </td>
                                    
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
