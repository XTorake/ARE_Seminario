@model IEnumerable<CxC_Seminario.DO.Pais>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<p>
    <div class="container-fluid">
        <a href="@Url.Action("Create", "Pais")" class="btn btn-primary btn-lg"> Agregar Nuevo</a>
    </div>
</p>
<div class="sparkline8-list">
    <div class="sparkline8-graph">
        <div class="static-table-list">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CodigoPais)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descuento)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodigoPais)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descuento)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Editar", new { id = item.IdPais }, new { @class = "btn btn-warning btn-sm" }) |
                            @Html.ActionLink("Eliminar", "Eliminar", new { id = item.IdPais }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>